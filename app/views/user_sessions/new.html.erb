<div class="hero container vh-100  mt-5">
  <div class="row">
    <div class="col-10 offset-1 col-md-10 offset-md-1 col-lg-4 offset-lg-4">
      <h1 class="text-center">ログインページ</h1>
      <%= form_with url: login_path, method: :post do |f| %>
     <div class="mt-3">
      <div class="form-group">
        <%= f.label :"メールアドレス" %>
        <%= f.text_field :email, class: 'form-control' %>
      </div>
      </div>
      <div class="form-group">
        <%= f.label :"パスワード" %>
        <i class='bx bx-lock-alt'></i>
        <%= f.password_field :"password", class: 'form-control'%>
      </div>
      <div class="w-100">
      <div class='mt-3 mb-3'>
      <div class="actions text-center">
        <%= f.submit "ログイン", class: 'btn btn-primary'%>
      </div>
      </div>
      <%end%>
      </div>
      <div class="text-center mt-5">
        <%= link_to '登録ページへ', new_user_path, class: "link-light link" %>
     </div>
   </div>
  </div>
</div>
