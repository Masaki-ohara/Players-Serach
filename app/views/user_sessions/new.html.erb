<div class="container">
  <div class="row">
    <div class="col-md-12 offset-md-1 col-lg-8 offset-lg-2">
<%= form_with url: login_path, method: :post do |f| %>
   <div class="form-group">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
   <div class="form-group">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
   <div class="form-group">
    <%= f.submit "ログイン", class: 'btn btn-primary'%>
  </div>
<% end %>
