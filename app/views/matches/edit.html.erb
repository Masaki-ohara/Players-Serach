<h1>試合カード編集</h1>

<%= form_with model: @match, local: true do |form| %>
  <div class="form-group">
    <%= form.label :date %>
    <%= form.date_field :date %>
  </div>

  <div class="form-group">
    <%= form.label :round %>
    <%= form.number_field :round %>
  </div>

  <div class="form-group">
    <%= form.label :league %>
    <%= form.select :league, [["J1 League"], ["J2 League"], ["J3 League"], ["Ligue 1(フランス1部)"], ["La Liga(スペイン1部)"], ["Premier(イングランド1部)"], ["SerieA(イタリア1部)"], ["Bundesliga(ドイツ1部)"], ["Eredivisie(オランダ1部)", 88], ["Primeira Liga(ポルトガル1部）", 94]], {include_blank: "リーグを選択して下さい"}, {class: 'form-control'} %>
  </div>

  <div class="form-group">
    <%= form.label :home_team_name %>
    <%= form.text_field :home_team_name %>
  </div>

  <div class="form-group">
    <%= form.label :away_team_name %>
    <%= form.text_field :away_team_name %>
  </div>

  <%= form.submit '更新する', class: 'btn btn-primary' %>
<% end %>

<%= link_to '戻る', match_path(@match) %>
