<div class="container-fluid">
  <div class="row">
  <div class="player">
<%= form_with url: players_url, method: :get, local: true do |f| %>
  <%= render 'shared/error_messages', { object: @player }  %> 

   <div class="col-md-6 offset-md-3"> 
<div class="form-group">  
<%= flash[:danger] %>
 <h1 class="text-center">プレイヤー検索</h1>

  <div class="w-100">
  <div class='mt-4 mb-3'>
    <%= f.select :league, [["J1 League", 98], ["J2 League", 99], ["J3 League",100], ["Ligue 1(フランス1部)", 61], ["La Liga(スペイン1部)", 140], ["Premier(イングランド1部)", 39], ["SerieA(イタリア1部)", 135], ["Bundesliga(ドイツ1部)", 78], ["Eredivisie(オランダ1部)", 88], ["Primeira Liga(ポルトガル1部）", 94]], {include_blank: "リーグを選択して下さい"}, {class: 'form-control'} %> 
  </div>  
  </div>   

  <div class="w-100"></div>
  <div class='mt-4 mb-3'>
    <%= f.select :season, [[2000, 2000], [2001, 2001], [2002, 2002], [2003, 2003], [2004, 2004], [2005, 2005], [2006, 2006], [2007, 2007], [2008, 2008], [2009, 2009], [2010, 2010], [2011, 2011], [2012, 2012], [2013, 2013], [2014, 2014], [2015, 2015], [2016, 2016], [2017, 2017], [2018, 2018],[2019, 2019], [2020, 2020], [2021, 2021], [2022, 2022], [2023, 2023]],  {include_blank: "西暦を選択してください"},  {class: 'form-control'} %>
  </div>   
  </div> 

  <div class="w-100">
  <div class='mt-3 mb-3'>
  <%= f.text_field :player_name, class: 'form-control', placeholder: '選手名を入力してください(last nameのみ入力してください)',size: "30" %>
  <i class='bx bx-search-alt-2 bx-tada' ></i>
 </div> 
  </div>   

  <div class="w-100">
  <div class='mt-4 mb-3'>
  <%= f.submit '検索', class: 'btn btn-primary' %>
  </div>
  </div>

  <div class="link">
     <%= link_to '使い方', treatment_path %>
  </div>
  </div>
  </div>

<%end%>
 </div>
</div>
</div>


