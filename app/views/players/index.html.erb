<p id="notice"><%= notice %></p>

<h1>Players</h1>
  <!-- 検索フォーム -->
  <%= render 'search_form', q: @q, url: players_path %>
<h2>ユーザー検索</h2>
<%= search_form_for @q, url: search_players_path do |f| %>
  <%= f.label :name_cont, 'プレイヤー名' %>
  <%= f.search_field :name_cont %>
  <br>
  <%= f.submit '検索' %>
<% end %>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Player', new_player_path %>
